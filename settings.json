{
  "emmet.includeLanguages": {
    "erb": "html",
    "html.erb": "html"
  },
  "files.associations": {
    "*.html.erb": "html",
    "*.component": "javascript" // ←こういうのがあってもOK
  },
  "terminal.integrated.env.osx": {
    "LANG": "en_US.UTF-8",
    "LC_ALL": "en_US.UTF-8"
  },
  "editor.formatOnSave": true,
  "[ruby]": {
    "editor.defaultFormatter": "shopify.ruby-lsp"
  }
}
