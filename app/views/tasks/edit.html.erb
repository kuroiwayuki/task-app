<h1>編集</h1>

<%= form_with model: @task, local: true do |form| %> <% if @task.errors.any? %>
<div class="bg-red-100 text-red-700 p-4 rounded mb-4">
  <h2><%= pluralize(@task.errors.count, "件のエラー") %>があります:</h2>
  <ul>
    <% @task.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="mb-4">
  <%= form.label :title, "タイトル", class: "block font-semibold" %> <%=
  form.text_field :title, class: "border p-2 w-full" %>
</div>

<div class="mb-4">
  <%= form.label :body, "本文", class: "block font-semibold" %> <%=
  form.text_area :body, class: "border p-2 w-full h-32" %>
</div>

<div class="flex gap-4">
  <%= form.submit "更新する", class: "bg-blue-500 text-white px-4 py-2 rounded"
  %>
</div>
<% end %>

<br />

<div><%= link_to "詳細", @task %> | <%= link_to "一覧", tasks_path %></div>
