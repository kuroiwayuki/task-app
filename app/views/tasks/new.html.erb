<%= turbo_frame_tag "modals" do %>
  <div
    data-controller="modals"
    data-modals-target="background"
    class="fixed inset-0 bg-black bg-opacity-50 z-50 flex justify-center items-center"
  >
    <div class="bg-white p-6 rounded shadow-md w-full max-w-md">
      <div class="flex justify-end">
        <button
          type="button"
          data-action="modals#close"
          class="text-gray-500 hover:text-gray-700 text-xl"
        >
          &times;
        </button>
      </div>

      <%= form_with model: @task do |form| %>
        <div class="mb-4">
          <%= form.label :title %>
          <%= form.text_field :title, class: "border p-2 w-full" %>
        </div>
        <div class="mb-4">
          <%= form.label :body %>
          <%= form.text_area :body, class: "border p-2 w-full h-32" %>
        </div>
        <%= form.submit "登録", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
      <% end %>
    </div>
  </div>
<% end %>