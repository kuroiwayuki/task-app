<header class="bg-white border-b shadow-sm">
  <p class="text-red-500 font-bold">Tailwind効いてる？</p>
  <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
    <!-- ロゴ -->
    <%= link_to "TaskApp", root_path, class: "text-2xl font-bold text-blue-600" %>
    <!-- ナビゲーションメニュー -->
    <nav class="space-x-4 text-sm md:text-base">
      <%= link_to "タスク", tasks_path, class: "hover:text-blue-500 transition" %>
    

      <%# ログインボタンは今回は非表示 %>
    </nav>
    <!-- 検索フォーム -->
    <%= render 'shared/search' %>
    <!-- 右側（ユーザー関連） -->
    <div class="flex items-center space-x-4">
      <% if Current.user %>
        <!-- ログイン中：ユーザー名とログアウト -->
        <span class="text-gray-700 font-semibold"><%= Current.user.name %> さん</span>
        <%= button_to "ログアウト", logout_path, method: :delete, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-xl" %>
      <% else %>
        <!-- 未ログイン：新規登録 -->
        <%= link_to "ログイン", login_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-xl"%></li>
      <%= link_to "新規登録", new_user_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-xl" %>
    <% end %>
  </div>
</div>
</header>
